# Use KUBE_PROXY_OPTS to modify the start/restart options
KUBE_PROXY_OPTS="<%
@iterator['proxy']['params'].each do |key, value|
  if !value.nil?
    if !value.is_a?(String) || !value.empty?
      %> --<%= key %>=<%=  if value.class.name == "Proc"
                            value.call
                          else
                            value
                          end
                      %><%
    end
  end
end %>"
